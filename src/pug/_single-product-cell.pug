.single-product-cell
    a.single-product-cell__top(href="#")
        .product-tags
            .product-tags__single
                .product-tags__text.sale Akce
            .product-tags__single
                .product-tags__text.new Novinka
            .product-tags__single
                .product-tags__text.top Nejprodávanější
            .product-tags__single
                .product-tags__text.recommended Doporučené


        .product-tags--right
            .product-tags__single
                .product-tags__text.sale.circle -30%
                
        .single-product-cell__img-container
            .single-product-cell__img-wrap
                img.lazy.single-product-cell__img(src=URLbase+"img/placeholder-280x280.png" data-src=URLbase+"img/product-thumb-medium.jpg" alt="#")
                span.lazy.single-product-cell__preloader
        h4.single-product-cell__title #{ProductName}


    .single-product-cell__bottom


        .single-product-cell__price-wrap

            .single-product-cell__price
                .single-product-cell__price-old 1 099 Kč
                .single-product-cell__price-main 899 Kč

            .single-product-cell__delivery
                p.single-product-cell__delivery-text Skladem

